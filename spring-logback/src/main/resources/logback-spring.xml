<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %kvp - %msg%n</pattern>-->
          <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] [%thread] %-5level %logger{35} - %msg%n</pattern>
<!--          <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %kvp - %.-4000msg%n</pattern>-->
        </encoder>
    </appender>

    <property name="LOG_DIR" value="./log" />

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/test.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] [%thread] %-5level %logger{35} - %.-300msg%n</pattern>
        </encoder>
    </appender>

    <appender name="SPECIFICITY_REQUEST" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <key>id</key>
            <DefaultValue>DEFAULT</DefaultValue>
        </discriminator>
        <sift>
            <appender name="FILE_ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>${LOG_DIR}/${id}/specificity.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                    <fileNamePattern>${LOG_DIR}/${id}/logFile-%d{yyyy-MM-dd_HH-mm}.%i.log.gz</fileNamePattern>
                    <maxFileSize>100MB</maxFileSize>
                    <maxHistory>2</maxHistory>
                    <totalSizeCap>3GB</totalSizeCap>
                </rollingPolicy>
                <encoder>
                    <pattern>[%thread] %-5level %logger{35} - %msg%n</pattern>
                </encoder>
            </appender>
        </sift>
    </appender>


<!--/foo.%d - default %d는 yyyy-MM-dd입니다. 매일 자정에 새로운 로그 파일로 rollover 합니다.-->
<!--/foo/%d{yyyy/MM}/bar.txt - 매월 새로운 디렉터리를 만들며 하위에 bar.txt 파일로 rollover 합니다.-->
<!--/foo/bar.%d{yyyy-MM-dd_HH-mm} - 매 분 새로운 로그 파일로 rollover 합니다.-->
<!--/foo/bar.%d.gz - 매일 새로운 로그 파일로 rollover 하고, 이전 로그파일은 GZIP으로 압축합니다.-->

    <root level="error">
        <appender-ref ref="STDOUT" />
<!--        <appender-ref ref="SPECIFICITY_REQUEST" />-->
    </root>
    <logger name="me.snowlight.springlogback" level="info">
        <appender-ref ref="STDOUT" />
    </logger>
<!--    <logger name="me.snowlight.springlogback.helloController" level="debug"/>-->
    <logger name="me.snowlight.springlogback.configController" level="debug">
        <appender-ref ref="FILE" />
    </logger>

    <logger name="me.snowlight.springlogback.testController" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="me.snowlight.springlogback.helloController" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="SPECIFICITY_REQUEST" />
    </logger>

<!--# https://logback.qos.ch/manual/configuration.html#rootElement-->
<!--
name 을 상속 경로 사용
 * additivity 상속을 여부
 * appender-ref

요청 ->  me.snowlight.springlogback.helloController -> me.snowlight.springlogback -> root (appender-ref)

-->
</configuration>